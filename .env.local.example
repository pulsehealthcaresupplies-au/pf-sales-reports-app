# Sales Reports App - Local Environment
# Copy to .env.local:  cp .env.local.example .env.local
# Next.js loads .env.local automatically. Do not commit .env.local.

# =============================================================================
# Required for GraphQL proxy (rewrites) and Apollo client
# =============================================================================
# API Gateway URL. Must be set for /api/graphql/sales-reports to proxy to backend.
NEXT_PUBLIC_API_URL=http://localhost:8000
# Alternative name (same value): NEXT_PUBLIC_API_GATEWAY_URL=http://localhost:8000

# This app's origin (port 3004 for sales-reports-app)
NEXT_PUBLIC_APP_URL=http://localhost:3004

# =============================================================================
# GraphQL (optional; defaults relative to API base)
# =============================================================================
# NEXT_PUBLIC_GRAPHQL_ENDPOINT=/graphql/sales-reports
# NEXT_PUBLIC_GRAPHQL_AUTH_ENDPOINT=/graphql/auth

# =============================================================================
# WebSocket (optional)
# =============================================================================
# NEXT_PUBLIC_WS_URL=ws://localhost:8000/graphql/sales-reports
# NEXT_PUBLIC_WS_AUTH_URL=ws://localhost:8000/graphql/auth

# =============================================================================
# Next.js Server Actions (production only)
# =============================================================================
# NEXT_SERVER_ACTIONS_ENCRYPTION_KEY=

NODE_ENV=development
