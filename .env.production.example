# ============================================================================
# Sales Reports App - Production Environment Variables
# ============================================================================
# Copy to .env.production or .env.production.local
# .env.production.local overrides .env.production (use for local production builds)

# ============================================================================
# Required: Backend Service URLs
# ============================================================================
# API Gateway URL (GraphQL, REST endpoints)
NEXT_PUBLIC_API_URL=https://api.pulsehealth.com
# NEXT_PUBLIC_API_GATEWAY_URL=https://api.pulsehealth.com  # Legacy alias

# Application URL (this frontend)
NEXT_PUBLIC_APP_URL=https://reports.pulsehealth.com

# ============================================================================
# Optional: GraphQL Endpoints (auto-derived from API_URL if not set)
# ============================================================================
# GraphQL endpoint path (relative to API_URL)
# NEXT_PUBLIC_GRAPHQL_ENDPOINT=/graphql/sales-reports

# Auth GraphQL endpoint path (relative to API_URL)
# NEXT_PUBLIC_GRAPHQL_AUTH_ENDPOINT=/graphql/auth

# ============================================================================
# Optional: WebSocket Endpoints (auto-derived from API_URL if not set)
# ============================================================================
# WebSocket URL for GraphQL subscriptions (Sales Reports)
# NEXT_PUBLIC_WS_URL=wss://api.pulsehealth.com/graphql/sales-reports/ws

# WebSocket URL for Auth subscriptions
# NEXT_PUBLIC_WS_AUTH_URL=wss://api.pulsehealth.com/graphql/auth/ws

# WebSocket URL for Notifications
# NEXT_PUBLIC_WS_NOTIFICATIONS_URL=wss://api.pulsehealth.com/ws/notifications

# ============================================================================
# Required: Pulse Core / Media Service
# ============================================================================
# Pulse Core URL (for images, uploads, media)
# Required in production - set this explicitly for Docker/cloud deployments
NEXT_PUBLIC_PULSE_CORE_URL=https://api.pulsehealth.com

# Additional CSP image origins (comma-separated)
# NEXT_PUBLIC_CSP_IMG_ORIGINS=https://cdn.pulsehealth.com

# ============================================================================
# Optional: Feature Flags
# ============================================================================
# NEXT_PUBLIC_ENABLE_ANALYTICS=true
# NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
# NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
# NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
# NEXT_PUBLIC_ENABLE_DARK_MODE=true

# ============================================================================
# Optional: API Configuration
# ============================================================================
# NEXT_PUBLIC_API_TIMEOUT=10000
# NEXT_PUBLIC_API_RETRIES=3
# NEXT_PUBLIC_API_RETRY_DELAY=1000
# NEXT_PUBLIC_GRAPHQL_TIMEOUT=30000

# ============================================================================
# Environment Configuration
# ============================================================================
NODE_ENV=production
# NEXT_PUBLIC_DEPLOYMENT_MODE=production

# ============================================================================
# Next.js Server Actions (Required for Production)
# ============================================================================
# Encryption key for Server Actions (generate: openssl rand -base64 32)
# Set at BUILD and RUNTIME (same value for all instances)
NEXT_SERVER_ACTIONS_ENCRYPTION_KEY=
